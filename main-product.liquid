                        >
                          {{ product.title }}
                        </h1>
                        {% assign product_handle = product.handle %}
              
                      </div>

                    {%- when 'variant_picker' -%}
                      <div
                        class="product-single__box__block product-single__box__block--{{ block.type }}"
                        {{ block.shopify_attributes }}
                      >
                        {%- unless product.has_only_default_variant -%}
                          {% render 'product-options',
                            product: product,
                            section_id: section.id,
                            style: block.settings.product_variant_style,
                            product_form_id: product_form_id,
                            update_url: true,
                            popup_enable: block.settings.popup_enable,
                            popup_trigger: block.settings.popup_trigger,
                            popup_label: block.settings.popup_label,
                            popup_content: block.settings.popup_content
                          %}
                          <script src="{{ 'variant-select-components.js' | asset_url }}" type="module"></script>
                          <script src="{{ 'product-interactive-options.js' | asset_url }}" type="module"></script>
                        {%- endunless -%}

                        <noscript class="product-form__noscript-wrapper-{{ section.id }}">
                          <div class="selector-wrapper{% if product.has_only_default_variant %} u-hidden{% endif %}">
                            <select
                              name="id"
                              id="Variants-{{ section.id }}"
                              class="single-option-selector"
                              form="{{ product_form_id }}"
                            >
                              {%- for variant in product.variants -%}
                                <option
                                  {% if variant == product.selected_or_first_available_variant %}
                                    selected="selected"
                                  {% endif %}
                                  {% if variant.available == false %}
                                    disabled
                                  {% endif %}
                                  value="{{ variant.id }}"
                                >
                                  {{ variant.title }}
                                  {%- if variant.available == false %}
                                    - {{ 'products.product.sold_out' | t -}}
                                  {%- endif %}
                                  - {{ variant.price | money | strip_html }}
                                </option>
                              {%- endfor -%}
                            </select>
                            {%- render 'icons-theme', icon: 'chevron', additional_classes: 'icon--down' -%}
                          </div>
                        </noscript>
                      </div>

                    {%- when 'vendor' -%}
                      <style type="text/css">
                        .section--{{ section.id }} .product-single__vendor {
                            font-size: {{ block.settings.vendor_size | times: 0.075 | times: 2 | plus: 0.75 }}rem;
                        }
                        @media screen and (max-width: 767px) {
                            .section--{{ section.id }} .product-single__vendor {
                                font-size: {{ block.settings.vendor_size | times: 0.07 | times: 2 | plus: 0.7 }}rem;
                            }
                        }
                      </style>

                      <div
                        class="product-single__box__block product-single__box__block--m-6 product-single__box__block--{{ block.type }}"
                        {{ block.shopify_attributes }}
                      >
                        <p class="product-single__vendor product-single__vendor--{{ block.settings.vendor_style }}">
                          {{ product.vendor | link_to_vendor }}
                        </p>
                      </div>
                  {%- endcase -%}
                {%- endif -%}
              {%- endfor -%}

              {%- unless buy_buttons_present -%}
                <product-form
                  {% unless settings.cart_type == 'page' %}
                    notify-on-add
                  {% else %}
                    redirect-on-add="{{ routes.cart_url }}"
                  {% endunless %}
                >
                  {% form 'product', product, class: 'product-form product-form--single js-product-form', id: form_id %}
                    <input
                      type="hidden"
                      name="id"
                      value="{{ current_variant.id }}"
                      {% unless settings.cart_type == 'page' %}
                        disabled
                      {% endunless %}
                    >
                    {% for variant in product.variants %}
                      <input
                        type="hidden"
                        id="quantity-{{ section.id }}-{{ variant.id }}"
                        data-qty="{{ variant.inventory_quantity }}"
                        disabled
                      >
                    {% endfor %}
                  {% endform %}
                </product-form>
              {%- endunless -%}

              {%- if complementary_products_block_absent and request.design_mode -%}
                <script type="module">
                  document.cookie = 'creative__complementary-products-absent=true; SameSite=None; Secure';
                </script>
              {%- endif -%}
            </div>

            {%- if section.settings.enable_sticky_content -%}
              </sticky-scroll>
              <script src="{{ 'sticky-scroll.js' | asset_url }}" type="module"></script>
            {%- endif -%}
            {{ modals }}
          </div>

          <div
            class="product-single__secondary-blocks js-animate-sequence"
          >
            {%- for block in section.blocks -%}
              {%- if block.settings.column == 'secondary' -%}
                {%- liquid
                  assign previous_block = null
                  assign next_block = null
                  assign previous_block_is_tab = false
                  assign next_block_is_tab = false
                  assign previous_block_is_callout = false
                  assign next_block_is_callout = false

                  if forloop.first == false
                    assign previous_index = forloop.index0 | minus: 1
                    assign previous_block = section.blocks[previous_index]

                    if previous_block.settings.column == 'secondary'
                      if previous_block.type == 'tab' or previous_block.settings.display_collapsible_tab
                        assign previous_block_is_tab = true
                      endif
                      if block.type == 'callout' and previous_block.type == 'callout'
                        assign previous_block_is_callout = true
                      endif
                    endif
                  endif

                  if forloop.last == false
                    assign next_index = forloop.index0 | plus: 1
                    assign next_block = section.blocks[next_index]

                    if next_block.settings.column == 'secondary'
                      if next_block.type == 'tab' or next_block.settings.display_collapsible_tab
                        assign next_block_is_tab = true
                      endif
                      if block.type == 'callout' and next_block.type == 'callout'
                        assign next_block_is_callout = true
                      endif
                    endif
                  endif

                  assign complementary_products_block_absent = true
                -%}

                {%- case block.type -%}
                  {%- when 'callout' -%}
                    <div
                      class="product-single__box__block {% if previous_block_is_callout %} product-single__box__block--mt-12{% endif %}{% if next_block_is_callout %} product-single__box__block--mb-12{% endif %} product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'block-callout',
                        icon: block.settings.icon,
                        icon_custom_svg: block.settings['svg-code'],
                        icon_size: block.settings.icon_size,
                        title: block.settings.title,
                        title_bold: block.settings.title_bold,
                        text: block.settings.text,
                        bg_color: block.settings.color_bg,
                        text_color: block.settings.color_text,
                        show_border: block.settings.show_border
                      %}
                    </div>

                  {%- when 'countdown' -%}
                    <div
                      class="product-single__box__block product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      <style>
                        .product-single__countdown--{{ block.id }} .product-single__countdown__bg--overlay:before {
                            background: {{ block.settings.overlay_color }};
                            {% if block.settings.overlay_strength == 100 %}
                                opacity: 1;
                            {% else %}
                                opacity: .{{ block.settings.overlay_strength }};
                            {% endif %}
                        }
                      </style>
                      {%- liquid
                        assign bg_color_block = block.settings.bg_color | upcase
                        assign bg_color_global = settings.color_bg | upcase
                        if block.settings.bg_image == blank and block.settings.bg_color.alpha == 0 or bg_color_block == bg_color_global
                          assign section_bg = false
                        else
                          assign section_bg = true
                        endif
                      -%}
                      <div
                        class="
                          product-single__countdown
                          {% unless section_bg %}
                            product-single__countdown--no-bg
                          {% endunless %}
                          product-single__countdown--{{ block.id }}
                          js-animate-single
                        "
                        data-animation-delay="0.15"
                        data-animation-displacement="0"
                        data-animation-interval="0.05"
                        data-animation-scale="1.05"
                        {% if block.settings.show_border %}
                          style="--border-color: {{ settings.color_text | color_modify: 'alpha', 0.2 }};"
                        {% endif %}
                      >
                        {% if block.settings.bg_image != blank %}
                          {% render 'image',
                            image: block.settings.bg_image,
                            image_ratio: '16:9',
                            additional_classes: 'product-single__countdown__bg',
                            image_srcset_widths: '180, 360, 540, 720, 900, 1080, 1296, 1512',
                            image_sizes: '(min-width: 981px) 800px, calc(100vw - 36px)',
                            focal_points: block.settings.bg_image.presentation.focal_point
                          %}
                          <div class="product-single__countdown__bg--overlay u-bg-overlay"></div>
                        {% else %}
                          {% if section_bg %}
                            <div
                              class="product-single__countdown__bg"
                              style="--bg-color: {{ block.settings.bg_color }};"
                            ></div>
                          {% endif %}
                        {% endif %}

                        <div
                          class="product-single__countdown__content js-animate-sequence"
                          data-animation-delay="0.3"
                          data-animation-interval="0.15"
                          data-animation-scale="0.95"
                        >
                          <div
                            class="product-single__countdown__text"
                            style="--text-color: {{ block.settings.content_color }};"
                          >
                            <div class="rte">{{ block.settings.text }}</div>
                          </div>
                          <div class="product-single__countdown__timer">
                            {%- liquid
                              assign countdown_text_size = block.settings.text_size | times: 0.55
                              assign countdown_text_size_mobile = block.settings.text_size_mobile | times: 1
                              assign countdown_divider_gap = block.settings.divider_gap | times: 0.5
                            -%}
                            {% render 'countdown-timer',
                              year: block.settings.countdown_year,
                              month: block.settings.countdown_month,
                              day: block.settings.countdown_day,
                              hour: block.settings.countdown_hour,
                              minute: block.settings.countdown_minute,
                              completion: block.settings.countdown_completion,
                              completion_message: block.settings.countdown_completion_message,
                              completion_parent_class_to_hide: '.product-single__countdown',
                              content_color: block.settings.content_color,
                              text_size: countdown_text_size,
                              text_size_mobile: countdown_text_size_mobile,
                              text_style: block.settings.text_style,
                              text_bold: block.settings.text_bold,
                              divider_style: block.settings.divider_style,
                              divider_gap: countdown_divider_gap,
                              show_labels: block.settings.show_labels,
                              show_border: block.settings.show_border
                            %}
                          </div>
                        </div>
                      </div>
                    </div>

                  {%- when 'custom-liquid' -%}
                    <div
                      class="product-single__box__block product-single__box__block--{{ block.type }} u-mt0 u-mb0"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.custom_liquid }}
                    </div>
                  
                  {%- when 'description' -%}
                    {%- if block.settings.display_collapsible_tab == false
                      or previous_block_is_tab == false
                      and block.settings.display_collapsible_tab
                    -%}
                      <div
                        class="product-single__box__block product-single__box__block--{{ block.type }}"
                        {{ block.shopify_attributes }}
                      >
                        {%- if block.settings.display_collapsible_tab -%}
                          {%- assign accordion_present = true -%}
                          <accordion-group>
                        {%- endif -%}
                    {%- endif -%}

                    {%- if block.settings.display_collapsible_tab -%}
                      {% render 'pdp-block-description',
                        id: block.id,
                        is_open: block.settings.open,
                        title: block.settings.title,
                        icon: block.settings.icon,
                        icon_color: block.settings.color_icon,
                        icon_size: block.settings.icon_size,
                        icon_custom_svg: block.settings['svg-code'],
                        description: product.description
                      %}

                    {%- else -%}
                      <div class="rte">
                        {% if product_handle contains '-used' %}
                          {% assign used_product_handle = product_handle %}
                        {% else %}
                          {% assign used_product_handle = product_handle | append: '-used' %}
                        {% endif %}
                        
                        {% assign used_product = all_products[used_product_handle] %}
                        
                        {% if used_product and used_product.available %}
                          <div class="used-book-section">
                            <p>Looking for a used copy?</p>
                            <a href="{{ used_product.url }}" class="used-book-link">
                              View Used Copy ({{ used_product.price | money }})</a>
                          </div>
                        {% endif %}
                        {{ product.description }}
                      </div>
                    {%- endif -%}

                    {%- if block.settings.display_collapsible_tab == false
                      or next_block_is_tab == false
                      and block.settings.display_collapsible_tab
                    -%}
                      {%- if block.settings.display_collapsible_tab -%}
                        </accordion-group>
                      {%- endif -%}
                      </div>
                    {%- endif -%}

                  {%- when 'image' -%}
                    <div
                      class="product-single__box__block product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'pdp-block-image',
                        image: block.settings.image,
                        image_width: block.settings.image_width,
                        image_sizes: '(min-width: 981px) calc(60vw - 30px), (min-width: 700px) 660px, calc(100vw - 36px)',
                        link: block.settings.link,
                        align: block.settings.align
                      %}
                    </div>

                  {%- when 'link' -%}
                    <div
                      class="product-single__box__block product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'pdp-block-link',
                        title: block.settings.title,
                        link: block.settings.link,
                        style: block.settings.style,
                        align: block.settings.align,
                        new_tab: block.settings.new_tab
                      %}
                    </div>

                  {%- when 'profile' -%}
                    <div
                      class="product-single__box__block product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'pdp-block-story', block: block %}
                    </div>

                  {%- when 'sku' -%}
                    <div
                      id="sku-{{ section.id }}"
                      data-sku-label="{{ block.settings.label }}"
                      class="product-single__box__block product-single__box__block--m-12 product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'pdp-block-sku', variant_sku: current_variant.sku, label: block.settings.label %}
                    </div>

                  {%- when 'spacer' -%}
                    <div
                      class="product-single__box__block product-single__box__block--m-0 product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'pdp-block-spacer',
                        border: block.settings.border,
                        top: block.settings.top,
                        bottom: block.settings.bottom
                      %}
                    </div>

                  {%- when 'share' -%}
                    <div
                      class="product-single__box__block product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'pdp-block-share',
                        block_align: block.settings.align,
                        product_url: product.url,
                        product_title: product.title,
                        product_image: product.featured_image
                      %}
                    </div>

                  {%- when 'tab' -%}
                    {%- assign page = pages[block.settings.tab_content] -%}
                    {%- unless previous_block_is_tab -%}
                      {%- assign accordion_present = true -%}
                      <div class="product-single__box__block product-single__box__block--{{ block.type }}">
                        <accordion-group>
                    {%- endunless -%}

                    {% render 'pdp-block-tab',
                      block_id: block.id,
                      is_open: block.settings.open,
                      title: block.settings.title,
                      icon: block.settings.icon,
                      icon_color: block.settings.color_icon,
                      icon_size: block.settings.icon_size,
                      icon_custom_svg: block.settings['svg-code'],
                      text: block.settings.text,
                      link: block.settings.link,
                      image: block.settings.image,
                      image_width: block.settings.image_width,
                      image_sizes: '(min-width: 981px) calc(60vw - 30px), (min-width: 700px) 660px, calc(100vw - 36px)',
                      align: block.settings.align,
                      page_title: page.title,
                      page_content: page.content
                    %}

                    {%- unless next_block_is_tab -%}
                      </accordion-group>
                      </div>
                    {%- endunless -%}

                  {%- when 'tags' -%}
                    <div
                      class="product-single__box__block product-single__box__block--m-12 product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'pdp-block-tags', tags: product.tags, label: block.settings.label %}
                    </div>

                  {%- when 'text' -%}
                    <div
                      class="product-single__box__block product-single__box__block--{{ block.type }}"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'pdp-block-text',
                        title: block.settings.title,
                        style: block.settings.style,
                        text: block.settings.text
                      %}
                    </div>
                {%- endcase -%}
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </product-single>
    <script src="{{ 'product-single.js' | asset_url }}" type="module"></script>
    {%- if accordion_present -%}
      <script src="{{ 'accordion-group.js' | asset_url }}" type="module"></script>
    {%- endif -%}
  </section>
</div>

{% unless product == empty %}
  <script type="application/json" id="ModelJson-{{ section.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
